<!-- Template for Burger Page -->
<h1>Eat A Burger</h1>
  
{{#each burgers}}
<pre>
  {{id}}  {{burger_name}} {{devoured}} {{date}}
  <form action="/delete/{{id}}" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{id}}">
    <button type="submit" class="btn btn-default">Delete</button>
  </form>
</pre>
{{/each}}

<form action="/create" method="POST">
  <div class="form-group">
    <label for="exampleInput1">Burger Order</label>
    <input type="text" name="burgerToAdd" class="form-control" id="exampleInput1" placeholder="Make your burger">
  </div>
 

  <button type="submit" class="btn btn-default">Order Your Burger</button>
</form>

